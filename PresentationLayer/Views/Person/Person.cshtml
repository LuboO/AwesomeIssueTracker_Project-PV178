@model PresentationLayer.PersonViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>People</title>
</head>
<body>
    <div class="container body-content">
        <hr />

        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    E-mail
                </th>
            </tr>

            @foreach (var item in Model.People)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
            }

        </table>

        <footer>
            <p>&copy; @DateTime.Now.Year - PV178 ASP.NET MVC demo</p>
        </footer>
    </div>
</body>
</html>