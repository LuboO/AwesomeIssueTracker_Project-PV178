@model PresentationLayer.Models.Person.PersonDetailModel

@{
    ViewBag.Title = Model.Person.Name;
}

<h2>Personal details</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <td>@Model.Person.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Person.Name</td>
    </tr>
    <tr>
        <th>E-Mail</th>
        <td>@Model.Person.Email</td>
    </tr>
    <tr>
        <th>Date of birth</th>
        @if(Model.Person.DateOfBirth == null) {
            <td>Unknown</td>
        } else {
            <td>@Model.Person.DateOfBirth</td>
        }
    </tr>
    <tr>
        <th>Adress</th>
        @if(String.IsNullOrEmpty(Model.Person.Adress)) {
            <td>Unknown</td>
        } else {
            <td>@Model.Person.Adress</td>
        }
    </tr>
    <tr>
        <th>Phone</th>
        @if(String.IsNullOrEmpty(Model.Person.Phone)) {
            <td>Unknown</td>
        } else {
            <td>@Model.Person.Phone</td>
        }
    </tr>
</table>
