@model PresentationLayer.Models.Person.ListPeopleModel

@{
    ViewBag.Title = "People";
}

<h2>Registered people</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>E-mail</th>
        <th></th>
    </tr>

    @foreach (var person in Model.People) {
    <tr>
        <td>
            @person.Id
        </td>
        <td>
            @person.Name
        </td>
        <td>
            @person.Email
        </td>
        <td>
            @Html.ActionLink("Details", "PersonDetail" , "Person" , new { personId = person.Id }, new { @class = "btn btn-primary"})
        </td>
    </tr>
    }

</table>