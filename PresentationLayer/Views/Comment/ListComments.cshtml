@model PresentationLayer.Models.Comment.ListCommentsModel

@if(Model.Comments.Count != 0) {
<table class="table">
    <tr>
        <th>Issue</th>
        <th>Posted</th>
        <th>Subject</th>
    </tr>

    @foreach (var comment in Model.Comments) {
    <tr>
        <td>@Html.ActionLink(comment.Issue.Title, "IssueDetail", "Issue", new { issueId = comment.Issue.Id}, new { @class = "btn-link"} )</td>
        <td>@comment.Created</td>
        <td>@comment.Subject</td>
    </tr>
    }
</table>
} else {
    <h5>No comments found.</h5>
}