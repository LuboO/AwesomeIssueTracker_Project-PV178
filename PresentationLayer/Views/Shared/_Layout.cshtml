<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AwIT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Awesome Issue Tracker", "Index", "Home" ,  new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                            People <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View all people", "ListPeople" , "Person")</li>
                            <li><a href="#">Edit person</a></li>
                            <li><a href="#">Add new person</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                            Customers <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View all customers", "ListCustomers" , "Customer")</li>
                            <li><a href="#">Edit customer</a></li>
                            <li><a href="#">Add new customer</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                            Employees <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View all employees", "ListEmployees" , "Employee")</li>
                            <li><a href="#">Edit employee</a></li>
                            <li><a href="#">Add new employee</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                            Projects <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View all projects", "ListProjects" , "Project")</li>
                            <li><a href="#">Edit project</a></li>
                            <li><a href="#">Add new project</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">
                            Issues <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View all issues", "ListIssues" , "Issue")</li>
                            <li><a href="#">Edit issue</a></li>
                            <li><a href="#">Add new issue</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("About", "About" , "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Awesome Issue Tracker</p>
        </footer>
    </div>

    <!--
    <li>@Html.ActionLink("Home" , "Index" , "Home")</li>
    <li>@Html.ActionLink("People", "ListPeople" , "Person")</li>
    <li>@Html.ActionLink("Customers", "ListCustomers" , "Customer")</li>
    <li>@Html.ActionLink("Employees", "ListEmployees" , "Employee")</li>
    <li>@Html.ActionLink("Projects", "ListProjects" , "Project")</li>
    <li>@Html.ActionLink("Issues", "ListIssues" , "Issue")</li>
    <li>@Html.ActionLink("About", "About" , "Home")</li>
    -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>