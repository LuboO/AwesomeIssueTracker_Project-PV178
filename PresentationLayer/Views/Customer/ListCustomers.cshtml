@model PresentationLayer.Models.Customer.ListCustomersModel

@{
    ViewBag.Title = "Customers";
}

<h2>Our customers</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>E-mail</th>
        <th></th>
    </tr>

    @foreach (var customer in Model.Customers) {
    <tr>
        <td>
            @customer.Person.Id
        </td>
        <td>
            @customer.Person.Name
        </td>
        <td>
            @customer.Person.Email
        </td>
        <td>
            @Html.ActionLink("Customer details", "CustomerDetail" , "Customer" , new { customerId = customer.Person.Id }, new { @class = "btn btn-primary"})
        </td>
    </tr>
    }

</table>