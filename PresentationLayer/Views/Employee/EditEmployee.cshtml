@model PresentationLayer.Models.Employee.EditEmployeeModel
@{
    ViewBag.Title = "Edit " + Model.Employee.Person.Name;
}

<h2>Edit @Model.Employee.Person.Name</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Employee.Id)

        <p>Employee entity does not have any updatable attributes (yet).</p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}