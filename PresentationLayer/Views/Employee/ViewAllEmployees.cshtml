@model PresentationLayer.Models.Employee.ViewAllEmployeesModel

@{
    ViewBag.Title = "Employees";
}

<h2>Our employees</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>E-mail</th>
        <th></th>
    </tr>

    @foreach (var employee in Model.Employees) {
    <tr>
        <td>
            @employee.Person.Name
        </td>
        <td>
            @employee.Person.Email
        </td>
        <td>
            @Html.ActionLink("Details", "PersonDetail" , "Person" , new { personId = employee.Id }, new { @class = "btn btn-primary"})
        </td>
    </tr>
    }

</table>