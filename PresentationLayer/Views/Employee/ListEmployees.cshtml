@model PresentationLayer.Models.Employee.ListEmployeesModel

@{
    ViewBag.Title = "Employees";
}

<h2>Our employees</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>E-mail</th>
        <th></th>
    </tr>

    @foreach (var employee in Model.Employees) {
    <tr>
        <td>
            @employee.Person.Id
        </td>
        <td>
            @employee.Person.Name
        </td>
        <td>
            @employee.Person.Email
        </td>
        <td>
            @Html.ActionLink("Employee details", "EmployeeDetail" , "Employee" , new { employeeId = employee.Person.Id }, new { @class = "btn btn-primary"})
        </td>
    </tr>
    }

</table>